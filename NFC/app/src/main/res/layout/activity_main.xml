<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bar_color"
        android:text="Bus Nfc Application"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="5dp"/>
    <LinearLayout
        android:id="@+id/kakao_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bus_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub_bar">
            <View
                android:id="@+id/sub_bar_back"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/sub_bar"/>
            <View
                android:id="@+id/sub_bar_drag"
                android:layout_width="50dp"
                android:layout_height="6dp"
                android:background="@drawable/sub_bar_drag"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bus_info_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <TextView
                android:id="@+id/bus_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="버스 정보 없음"
                android:textSize="40dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@color/white"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/under_line"
                android:layout_marginBottom="50dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/station_previ_next"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/previ_station"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="이전역"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:ems="7"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                    <TextView
                        android:id="@+id/current_station"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="현재 역"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/station_current"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:ems="8"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/next_station"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="다음 역"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:ems="7"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/first_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착 정보 없음"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
                    android:gravity="center">
                    <View
                        android:layout_width="50dp"
                        android:layout_height="3dp"
                        android:background="@drawable/under_line"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textColor="#6A6A6A"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="다음 버스"
                        />
                    <View
                        android:layout_width="50dp"
                        android:layout_height="3dp"
                        android:background="@drawable/under_line"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/second_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도착 정보 없음"
                    android:textSize="18dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Made By DL"
                android:gravity="center"
                android:textColor="@color/grey"
                android:layout_margin="25dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>